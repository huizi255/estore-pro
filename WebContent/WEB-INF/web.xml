<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>EStore</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <filter>
  	<filter-name>encoding</filter-name>
  	<filter-class>com.briup.estore.web.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>encoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>ListBook</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ListBookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ListBook</servlet-name>
  	<url-pattern>/ListBookServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>shopcart</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ShopcartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>shopcart</servlet-name>
  	<url-pattern>/shopcartServlet</url-pattern>
  </servlet-mapping>
 
  <servlet>
  	<servlet-name>updateProduct</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.UpdateProduct</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>updateProduct</servlet-name>
  	<url-pattern>/updateProduct</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>listShopping</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ListShoppingCart</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>listShopping</servlet-name>
  	<url-pattern>/listShoppingCart</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>removeProduct</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.RemoveProduct</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>removeProduct</servlet-name>
  	<url-pattern>/removeProduct</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
  	<servlet-name>removeAll</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.RemoveAllProduct</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>removeAll</servlet-name>
  	<url-pattern>/removeAllProduct</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>confirmOrder</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ConfirmOrder</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>confirmOrder</servlet-name>
  	<url-pattern>/confirmOrder</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>modifyCustomer</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ModifyCustomer</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>modifyCustomer</servlet-name>
  	<url-pattern>/modifyCustomer</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>saveOrder</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.SaveOrder</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>saveOrder</servlet-name>
  	<url-pattern>/saveOrder</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>listOrderServlet</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.ListOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>listOrderServlet</servlet-name>
  	<url-pattern>/listOrderServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>orderInfo</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.OrderInfo</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>orderInfo</servlet-name>
  	<url-pattern>/orderInfo</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>removeOrder</servlet-name>
  	<servlet-class>com.briup.estore.web.servlet.RemoveOrder</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>removeOrder</servlet-name>
  	<url-pattern>/removeOrder</url-pattern>
  </servlet-mapping>
</web-app>